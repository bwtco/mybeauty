<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="product_product_report_base_form" model="ir.ui.view">
        <field name="name">report_base.product.form.view</field>
        <field name="model">product.template</field>
        <field name="priority">3</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//h1" position="after">
                <field name="product_name_arabic" placeholder="Arabic Product Name"/>
            </xpath>
            <field name="barcode" position="after">
                <field name="sfda_number"/>
            </field>
            <field name="categ_id" position="after">
                <field name="product_tag_ids" widget="many2many_tags" options="{'color_field': 'color','no_create_edit': True}"/>
            </field>
        </field>
    </record>

</odoo>
